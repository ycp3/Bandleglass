<div class="max-h-36 p-8 rounded-lg flex items-center text-center gap-8 <%= bg_class %>">
  <div class="flex flex-col items-center justify-evenly">
    <strong class="text-2xl <%= text_class %>"><%= @team.win ? "WIN" : "LOSS" %></strong>
    <p><%= @match.time %></p>
    <p><%= time_ago_in_words @match.finished_at %> ago</p>
  </div>
  <div class="flex flex-col items-center gap-2 border-l pl-8">
    <%= image_tag @participant.champion.image_path, class: "rounded-full #{border_class} border-2 max-h-16" %>
    <strong><%= @participant.champion.name %></strong>
  </div>

</div>
