<div class="flex flex-col gap-2 items-center w-full">
  <div class="rounded bg-white shadow p-16 flex justify-between w-full max-w-[61.5rem] items-baseline">
    <div class="flex items-center gap-5">
      <div class="relative">
        <%= image_tag @summoner.image_path, class: "rounded-full w-32 h-32" %>
        <div class="absolute mx-auto left-0 right-0 -bottom-3 bg-gray-700 rounded-full text-white flex justify-center items-center h-7 w-10 text-sm">
          <%= @summoner.level %>
        </div>
      </div>
      <div class="flex flex-col gap-5 items-start">
        <div class="text-4xl font-bold text-gray-700">
          <%= @summoner.name %>
        </div>
        <%= link_to "Update", summoner_update_matches_path(@summoner), data: { turbo_method: :put, turbo_confirm: "Are you sure you want to update this summoner?" },
        class: "p-2 px-3 rounded text-bold border border-2 border-blue-400 text-blue-400 hover:text-white hover:bg-blue-400" %>
      </div>
    </div>

    
  </div>

  <div class="flex gap-2 flex-col md:flex-row">
    <div class="flex flex-col gap-2">
      <%= render Ranks::CardComponent.new(summoner: @summoner) %>
      <%= render Ranks::CardComponent.new(summoner: @summoner, flex_rank: true) %>
    </div>
    <div class="flex flex-col gap-2">
      <%= render Matches::CardComponent.with_collection(@matches, summoner: @summoner) %>
    </div>
  </div>
</div>
