<div class="flex flex-col gap-2 w-full">
  <div class="rounded bg-white shadow p-16 flex items-baseline">
    <%= image_tag @summoner.image_path, class: "rounded-full w-32 h-32" %>
    <div class="text-4xl font-bold">
      <%= @summoner.name %>
    </div>

    <%= link_to "Update", summoner_update_matches_path(@summoner), data: { turbo_method: :put } %>
  </div>

  <div class="flex flex-col gap-2">
    <%= render Matches::CardComponent.with_collection(@matches, summoner: @summoner) %>
  </div>
</div>
